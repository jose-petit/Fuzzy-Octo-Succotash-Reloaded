import React, { useMemo, useState, useEffect } from 'react';
import { useRouter } from 'next/router';
import Layout from 'components/Layout';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';

const EnlacesAdminPage = () => {
  const qc = useQueryClient();
  const [filter, setFilter] = useState('');

  const { data: enlaces = [], isFetching } = useQuery(
    ['enlaces-admin'],
    async () => {
      const res = await fetch('/api/enlace', { cache: 'no-store' });
      const json = await res.json();
      return json.enlaces || [];
    },
    { refetchOnWindowFocus: false, staleTime: 0 }
  );

  const router = useRouter();

  useEffect(() => {
    if (router.query.filter) {
      setFilter(String(router.query.filter));
    }
  }, [router.query.filter]);

  const syncMutation = useMutation({
    mutationFn: async () => {
      const res = await fetch('/api/enlace?sync=true');
      if (!res.ok) throw new Error('Sync failed');
      return res.json();
    },
    onSuccess: () => qc.invalidateQueries(['enlaces-admin']),
  });

  const updateMutation = useMutation({
    mutationFn: async (enlace) => {
      const payload = {
        id: enlace.id,
        enlace: {
          name1: enlace.name1,
          enlace1: Number(enlace.enlace1),
          name2: enlace.name2,
          enlace2: enlace.enlace2 !== '' ? Number(enlace.enlace2) : '',
          umbral: Number(enlace.umbral),
          raman1: Number(enlace.raman1) || 0,
          raman2: Number(enlace.raman2) || 0,
          hoa_rx1: Number(enlace.hoa_rx1) || 0,
          hoa_rx2: Number(enlace.hoa_rx2) || 0,
          line_initial1: Number(enlace.line_initial1) || 0,
          loss_reference: Number(enlace.loss_reference) || 0,
          isSingle: !!enlace.isSingle,
        },
      };
      const res = await fetch('/api/enlace', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload),
      });
      if (!res.ok) throw new Error('Update failed');
      return res.json();
    },
    onSuccess: () => qc.invalidateQueries(['enlaces-admin']),
  });

  const addMutation = useMutation({
    mutationFn: async (enlace) => {
      const res = await fetch('/api/enlace', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ enlace }),
      });
      if (!res.ok) throw new Error('Add failed');
      return res.json();
    },
    onSuccess: () => qc.invalidateQueries(['enlaces-admin']),
  });

  const deleteMutation = useMutation({
    mutationFn: async (id) => {
      const res = await fetch('/api/enlace', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });
      if (!res.ok) throw new Error('Delete failed');
      return res.json();
    },
    onSuccess: () => qc.invalidateQueries(['enlaces-admin']),
  });

  const filtered = useMemo(() => {
    if (!filter) return enlaces;
    const f = filter.toLowerCase();
    return enlaces.filter(
      (e) =>
        String(e.enlace1).includes(f) ||
        String(e.enlace2 || '').includes(f) ||
        (e.name1 || '').toLowerCase().includes(f) ||
        (e.name2 || '').toLowerCase().includes(f)
    );
  }, [enlaces, filter]);

  return (
    <Layout>
      <style jsx global>{`
        .custom-scrollbar::-webkit-scrollbar {
          width: 5px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
          background: rgba(0, 0, 0, 0.1);
          border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
          background: #2563eb;
          border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
          background: #1d4ed8;
        }
      `}</style>
      <div className="max-w-7xl mx-auto px-4 py-8 animate-fade-in">
        {/* HEADER INDUSTRIAL */}
        <div className="flex flex-col md:flex-row items-center justify-between mb-10 pb-8 border-b border-gray-200/60 gap-8">
          <div className="relative group">
            <div className="absolute -left-4 top-0 w-1 h-full bg-blue-600 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-500 shadow-[0_0_15px_rgba(37,99,235,0.6)]"></div>
            <h1 className="text-4xl font-black text-gray-900 tracking-tighter flex items-center gap-4 italic uppercase">
              <span className="bg-blue-600 text-white px-3 py-1 rounded-lg shadow-lg not-italic">ADM</span>
              Gesti√≥n de Enlaces
            </h1>
            <div className="flex items-center gap-2 mt-2">
              <span className="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
              <p className="text-[10px] text-gray-400 font-black uppercase tracking-[0.3em] leading-none">Topology Calibration Console v3.1_REL</p>
            </div>
          </div>

          <div className="flex items-center gap-4 bg-gray-50/80 p-3 rounded-2xl border border-gray-200 shadow-[0_4px_20px_rgba(0,0,0,0.03)] backdrop-blur-md">
            <div className="relative">
              <input
                className="pl-11 pr-4 py-2.5 rounded-xl bg-white text-gray-900 border border-gray-200 focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 outline-none transition-all w-80 text-sm font-bold placeholder:text-gray-300 shadow-inner"
                placeholder="BUSCAR ENLACE / SERIAL..."
                value={filter}
                onChange={(e) => setFilter(e.target.value)}
              />
              <span className="absolute left-4 top-3 text-gray-400 group-focus-within:text-blue-500 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="3" strokeLinecap="round" strokeLinejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
              </span>
            </div>

            <button
              className={`px-6 py-2.5 rounded-xl font-black text-[10px] tracking-[0.2em] uppercase transition-all flex items-center gap-3 shadow-sm border ${syncMutation.isLoading
                ? 'bg-gray-100 text-gray-400 cursor-not-allowed border-gray-200'
                : 'bg-gray-900 text-cyan-400 hover:bg-black hover:shadow-[0_0_20px_rgba(34,211,238,0.2)] active:scale-95 border-gray-800'
                }`}
              onClick={() => syncMutation.mutate()}
              disabled={syncMutation.isLoading}
            >
              <span className={`text-lg ${syncMutation.isLoading ? 'animate-spin' : ''}`}>
                {syncMutation.isLoading ? '‚öôÔ∏è' : 'üì°'}
              </span>
              {syncMutation.isLoading ? 'Syncing...' : 'Sync Cloud'}
            </button>
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* COLUMNA IZQUIERDA: NUEVO REGISTRO */}
          <div className="lg:col-span-1">
            <div className="sticky top-24 max-h-[calc(100vh-120px)] overflow-y-auto pr-2 custom-scrollbar">
              <div className="bg-[#1a1f2e] rounded-3xl p-8 shadow-[0_20px_50px_rgba(0,0,0,0.2)] border-t border-white/5 relative group/card shadow-blue-500/5">
                {/* Hardware Aesthetic */}
                <div className="absolute top-0 right-0 w-32 h-32 bg-blue-500/5 rounded-full -translate-y-1/2 translate-x-1/2 blur-3xl"></div>
                <div className="absolute bottom-0 left-0 w-24 h-24 bg-cyan-500/5 rounded-full translate-y-1/2 -translate-x-1/2 blur-2xl"></div>

                <div className="relative z-10">
                  <div className="flex items-center gap-3 mb-8">
                    <div className="bg-blue-500/20 p-2.5 rounded-xl">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#60a5fa" strokeWidth="2.5" strokeLinecap="round" strokeLinejoin="round"><path d="M12 5v14M5 12h14" /></svg>
                    </div>
                    <div>
                      <h2 className="text-lg font-black text-white uppercase tracking-tighter">Nueva Terminal</h2>
                      <p className="text-[10px] text-gray-500 font-bold uppercase tracking-widest">Master Hardware Index</p>
                    </div>
                  </div>

                  <EnlaceForm
                    layout="vertical"
                    onSubmit={(values) => addMutation.mutate(values)}
                    submitLabel={addMutation.isLoading ? 'CONECTANDO...' : 'REGISTRAR MASTER'}
                  />
                </div>

                {/* Industrial Footer Decoration */}
                <div className="mt-8 pt-6 border-t border-white/5 flex justify-between items-center opacity-30">
                  <div className="flex gap-1">
                    <div className="w-1 h-1 bg-gray-500 rounded-full"></div>
                    <div className="w-1 h-1 bg-gray-500 rounded-full"></div>
                    <div className="w-1 h-1 bg-gray-500 rounded-full"></div>
                  </div>
                  <span className="text-[8px] font-black text-gray-400 tracking-[0.5em]">SECURE_SYC_v3</span>
                </div>
              </div>

              <div className="mt-6 p-6 bg-blue-500/5 border border-blue-500/10 rounded-2xl shadow-inner">
                <p className="text-[11px] text-blue-400 font-black uppercase tracking-widest mb-3 flex items-center gap-2">
                  <span className="w-1.5 h-3.5 bg-blue-500 rounded-full shadow-[0_0_8px_rgba(59,130,246,0.5)]"></span>
                  Protocolo de Calibraci√≥n Din√°mica
                </p>
                <div className="space-y-3">
                  <p className="text-gray-500 text-[11px] leading-relaxed font-medium">
                    <strong className="text-gray-700">Ref. Atenuaci√≥n:</strong> Valor de p√©rdida nominal del tramo (dB).
                  </p>
                  <p className="text-gray-500 text-[11px] leading-relaxed font-medium">
                    <strong className="text-gray-700">Margen Cr√≠tico:</strong> Tolerancia adicional admitida (+dB) antes de disparar alerta.
                  </p>
                  <p className="text-gray-500 text-[11px] leading-relaxed font-medium italic">
                    F√≥rmula: <span className="text-blue-500 font-mono">P√©rdida &gt; (Ref + Margen)</span>
                  </p>
                </div>
              </div>
            </div>
          </div>

          {/* COLUMNA DERECHA: LISTADO DE ENLACES */}
          <div className="lg:col-span-2">
            <div className="flex items-end justify-between mb-8 px-2 font-black italic">
              <h2 className="text-2xl text-gray-900 flex items-center gap-3 uppercase tracking-tighter">
                Inventario de Topolog√≠a
                <span className="not-italic px-3 py-1 bg-gray-900 text-cyan-400 text-[10px] rounded-lg tracking-widest leading-none shadow-lg border border-cyan-500/20">
                  {filtered.length} UNIT
                </span>
              </h2>
              {isFetching && <div className="text-[10px] text-blue-600 font-black animate-pulse uppercase tracking-[0.2em] mb-1">DATA_STREAM_SYNC</div>}
            </div>

            <div className="space-y-12">
              {filtered.map((item) => (
                <div key={item.id} className="group relative">
                  {/* Digital Header Strip */}
                  <div className="absolute -top-4 left-8 z-20 flex items-center h-8">
                    <div className="bg-gray-900 px-5 py-1.5 rounded-2xl border border-gray-700 shadow-[0_10px_30px_rgba(0,0,0,0.3)] flex items-center gap-3 group-hover:border-blue-500/50 transition-all duration-500 group-hover:scale-105">
                      <div className={`w-2 h-2 rounded-full shadow-[0_0_8px] transition-all duration-500 ${item.isSingle ? 'bg-amber-500 shadow-amber-500/50' : 'bg-blue-500 shadow-blue-500/50'}`}></div>
                      <span className="text-[11px] font-black text-white uppercase tracking-[0.1em] leading-none flex items-center gap-2 whitespace-nowrap">
                        {item.isSingle && <span className="text-amber-500 font-black tracking-widest text-[9px] border-r border-white/10 pr-2 italic">STANDALONE</span>}
                        {item.name1 || 'NODO UNKNOWN'}
                        {!item.isSingle && (
                          <>
                            <span className="text-blue-400 text-base leading-none">‚ü∑</span>
                            <span className="opacity-90">{item.name2 || 'NODO UNKNOWN'}</span>
                          </>
                        )}
                      </span>
                    </div>
                    {/* Decorative Link Line */}
                    <div className="h-[1px] w-8 bg-gray-300 group-hover:w-12 group-hover:bg-blue-500/40 transition-all duration-700 hidden lg:block"></div>
                  </div>

                  <div className="absolute -inset-2 bg-gradient-to-r from-blue-500/5 via-cyan-500/5 to-emerald-500/5 rounded-[2.5rem] opacity-0 group-hover:opacity-100 transition-all duration-700 blur-xl"></div>

                  <div className="relative bg-white rounded-[2.5rem] p-10 pb-12 border border-gray-100 shadow-[0_10px_30px_rgba(0,0,0,0.02)] transition-all group-hover:shadow-[0_20px_50px_rgba(0,0,0,0.05)] ring-1 ring-gray-900/5 overflow-hidden">
                    {/* Ghost Background Text */}
                    <div className="absolute top-2 right-2 p-8 opacity-[0.02] pointer-events-none select-none group-hover:opacity-[0.05] transition-opacity duration-700">
                      <div className="text-[12rem] font-black italic tracking-tighter leading-none">{item.isSingle ? 'UNIT' : 'LINK'}</div>
                    </div>

                    {/* Visual Card Accent */}
                    <div className={`absolute top-0 left-0 w-1 h-full transition-all duration-500 ${item.isSingle ? 'bg-amber-500' : 'bg-blue-600'}`}></div>

                    <EnlaceForm
                      initial={item}
                      onSubmit={(values) => updateMutation.mutate({ ...values, id: item.id })}
                      onDelete={() => deleteMutation.mutate(item.id)}
                      submitLabel={updateMutation.isLoading ? 'GUARDANDO...' : 'GUARDAR CAMBIOS'}
                    />
                  </div>
                </div>
              ))}

              {filtered.length === 0 && (
                <div className="text-center py-20 bg-gray-50 border-2 border-dashed border-gray-200 rounded-3xl">
                  <p className="text-gray-400 font-medium">No se encontraron terminales coincidentes.</p>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </Layout>
  );
};

const EnlaceForm = ({ initial, onSubmit, onDelete, submitLabel = 'Guardar', layout = 'grid' }) => {
  const [form, setForm] = useState({
    name1: initial?.name1 || '',
    enlace1: initial?.enlace1 || '',
    name2: initial?.name2 || '',
    enlace2: initial?.enlace2 ?? '',
    umbral: initial?.umbral ?? -40,
    raman1: initial?.raman1 ?? 0,
    raman2: initial?.raman2 ?? 0,
    hoa_rx1: initial?.hoa_rx1 ?? 0,
    hoa_rx2: initial?.hoa_rx2 ?? 0,
    line_initial1: initial?.line_initial1 ?? 0,
    loss_reference: initial?.loss_reference ?? 0,
    isSingle: !!initial?.isSingle,
  });
  const set = (k, v) => setForm((s) => ({ ...s, [k]: v }));

  const isVertical = layout === 'vertical';

  return (
    <form
      className="space-y-6"
      onSubmit={(e) => {
        e.preventDefault();
        onSubmit(form);
      }}
    >
      <div className={`grid grid-cols-1 ${isVertical || form.isSingle ? '' : 'lg:grid-cols-2'} gap-8 relative`}>
        {/* Nodo A Panel */}
        <div className={`space-y-4 p-4 bg-gray-50/50 rounded-2xl border border-gray-100 relative group/node ${form.isSingle ? 'max-w-2xl mx-auto w-full' : ''}`}>
          <div className="absolute top-4 right-4 text-[10px] font-bold text-blue-500 opacity-20 group-hover/node:opacity-100 transition-opacity tracking-widest uppercase">
            {form.isSingle ? 'Standalone Device' : 'Input Terminal'}
          </div>
          <h3 className="text-xs font-black text-gray-400 uppercase tracking-[0.2em] mb-2 border-l-2 border-blue-500 pl-2">
            {form.isSingle ? 'Device Parameters' : 'Source - Node A'}
          </h3>
          <TextInput label="Identificador Nodo" value={form.name1} onChange={(v) => set('name1', v)} placeholder="Ej: CARACAS" />
          <NumberInput label="Serial Tarjeta (NMS)" value={form.enlace1} onChange={(v) => set('enlace1', v)} required placeholder="100XXX" color="blue" />

          <div className="grid grid-cols-2 gap-4 mt-6 pt-6 border-t border-gray-200/50">
            <NumberInput label="Raman Calib." value={form.raman1} onChange={(v) => set('raman1', v)} color="amber" />
            <NumberInput label="HOA Rx Calib." value={form.hoa_rx1} onChange={(v) => set('hoa_rx1', v)} color="cyan" />
          </div>
        </div>

        {/* Separador Visual para Layout Horizontal */}
        {!isVertical && !form.isSingle && (
          <div className="hidden lg:flex absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-10">
            <div className="flex flex-col items-center gap-1 opacity-20 group-hover:opacity-100 transition-all duration-500">
              <div className="w-1 h-8 bg-gradient-to-b from-transparent via-blue-500 to-transparent"></div>
              <div className="text-[10px] font-black text-gray-400 rotate-90 my-4 tracking-[0.5em] whitespace-nowrap">BIDIRECTIONAL</div>
              <div className="w-1 h-8 bg-gradient-to-t from-transparent via-blue-500 to-transparent"></div>
            </div>
          </div>
        )}

        {/* Nodo B Panel */}
        {!form.isSingle && (
          <div className="space-y-4 p-4 bg-gray-50/50 rounded-2xl border border-gray-100 relative group/node">
            <div className="absolute top-4 right-4 text-[10px] font-bold text-emerald-500 opacity-20 group-hover/node:opacity-100 transition-opacity tracking-widest uppercase">Output Terminal</div>
            <h3 className="text-xs font-black text-gray-400 uppercase tracking-[0.2em] mb-2 border-r-2 border-emerald-500 pr-2 text-right">Destination - Node B</h3>
            <TextInput label="Identificador Nodo" value={form.name2} onChange={(v) => set('name2', v)} placeholder="Ej: VALENCIA" />
            <NumberInput label="Serial Tarjeta (NMS)" value={form.enlace2} onChange={(v) => set('enlace2', v)} placeholder="100XXX" color="green" />

            <div className="grid grid-cols-2 gap-4 mt-6 pt-6 border-t border-gray-200/50">
              <NumberInput label="Raman Calib." value={form.raman2} onChange={(v) => set('raman2', v)} color="amber" />
              <NumberInput label="HOA Rx Calib." value={form.hoa_rx2} onChange={(v) => set('hoa_rx2', v)} color="cyan" />
            </div>
          </div>
        )}
      </div>

      {/* Dynamic Threshold Section */}
      <div className={`mt-10 p-6 bg-gray-900/[0.02] rounded-[2rem] border border-gray-100 shadow-inner ${isVertical ? 'mx-2' : ''}`}>
        <div className="flex items-center gap-3 mb-6">
          <div className="w-1 h-4 bg-red-500 rounded-full"></div>
          <h4 className="text-[10px] font-black text-gray-400 uppercase tracking-widest">Configuraci√≥n de Inteligencia de Red</h4>
        </div>

        <div className={`grid ${isVertical ? 'grid-cols-1 gap-4' : 'grid-cols-1 md:grid-cols-4 gap-6'}`}>
          <div className="md:col-span-1">
            <NumberInput label="P√©rdida Ref. (dB)" value={form.loss_reference} onChange={(v) => set('loss_reference', v)} color="blue" placeholder="Ej: 22.5" />
          </div>
          <div className="md:col-span-1">
            <NumberInput label="Margen Alerta (+dB)" value={form.umbral} onChange={(v) => set('umbral', v)} required color="red" placeholder="3.0" />
          </div>
          <div className="md:col-span-1">
            <NumberInput label="Potencia Inicial (dBm)" value={form.line_initial1} onChange={(v) => set('line_initial1', v)} color="emerald" placeholder="-5.0" />
          </div>

          <div className="md:col-span-1">
            <label className="text-[8px] uppercase tracking-[0.2em] font-black text-gray-400 mb-1.5 ml-1 block">Modo Operativo</label>
            <div className={`h-[42px] flex items-center justify-between px-4 rounded-xl border bg-white shadow-sm`}>
              <span className={`text-[8px] font-black uppercase ${form.isSingle ? 'text-gray-400' : 'text-blue-600'}`}>Dual</span>
              <button
                type="button"
                onClick={() => set('isSingle', !form.isSingle)}
                className={`relative inline-flex h-5 w-10 items-center rounded-full transition-all duration-300 ${form.isSingle ? 'bg-amber-500 shadow-[0_2px_8px_rgba(245,158,11,0.3)]' : 'bg-blue-600 shadow-[0_2px_8px_rgba(37,99,235,0.3)]'}`}
              >
                <span className={`inline-block h-3.5 w-3.5 transform rounded-full bg-white shadow-sm transition-transform duration-300 ${form.isSingle ? 'translate-x-6' : 'translate-x-0.5'}`} />
              </button>
              <span className={`text-[8px] font-black uppercase ${form.isSingle ? 'text-amber-600' : 'text-gray-400'}`}>Single</span>
            </div>
          </div>
        </div>
      </div>
      <div className={`pt-6 mt-8 border-t border-gray-100/10 ${isVertical ? 'px-2 pb-6' : ''}`}>
        <div className={`flex ${isVertical ? 'flex-col gap-6' : 'flex-col xl:flex-row xl:items-end justify-end gap-6'}`}>

          {/* Section: Action Buttons */}
          <div className={`flex ${isVertical ? 'flex-col gap-3' : 'items-center gap-3 w-full xl:w-auto mt-2 xl:mt-0'}`}>
            {onDelete && (
              <button
                className={`h-[42px] px-6 rounded-xl bg-white text-red-500 hover:bg-red-500 hover:text-white font-black transition-all text-[10px] uppercase border-2 border-red-50 hover:border-red-500 active:scale-95 shadow-sm mb-0.5 flex items-center justify-center ${isVertical ? 'w-full' : 'min-w-[100px]'}`}
                type="button"
                onClick={() => {
                  if (window.confirm('¬øEliminar este enlace permanentemente?')) onDelete();
                }}
              >
                Borrar
              </button>
            )}
            <button
              className={`h-[42px] px-10 rounded-xl bg-blue-600 text-white font-black uppercase tracking-[0.1em] hover:bg-blue-700 shadow-lg shadow-blue-500/20 active:scale-95 transition-all text-[10px] border-b-4 border-blue-900 mb-0.5 flex items-center justify-center ${isVertical ? 'w-full' : 'min-w-[180px]'}`}
              type="submit"
            >
              {submitLabel}
            </button>
          </div>
        </div>
      </div>
    </form>
  );
};

const TextInput = ({ label, value, onChange, placeholder }) => (
  <div className="flex flex-col group/input">
    <label className="text-[9px] uppercase tracking-[0.2em] font-black text-gray-400 mb-2 ml-1 transition-colors group-hover/input:text-blue-500">{label}</label>
    <div className="relative">
      <input
        type="text"
        className="w-full px-4 py-3 rounded-xl bg-gray-50/50 text-gray-900 border border-gray-200 outline-none transition-all placeholder:text-gray-300 font-bold text-sm focus:bg-white focus:border-blue-500 focus:shadow-[0_0_20px_rgba(59,130,246,0.1)] shadow-inner"
        value={value}
        placeholder={placeholder}
        onChange={(e) => onChange(e.target.value)}
      />
    </div>
  </div>
);

const NumberInput = ({ label, value, onChange, required, placeholder, color = 'blue' }) => {
  const colorMap = {
    blue: 'text-blue-500 border-blue-500/20 group-focus-within/input:border-blue-500/50 shadow-blue-500/5',
    green: 'text-emerald-500 border-emerald-500/20 group-focus-within/input:border-emerald-500/50 shadow-emerald-500/5',
    emerald: 'text-emerald-500 border-emerald-500/20 group-focus-within/input:border-emerald-500/50 shadow-emerald-500/5',
    amber: 'text-amber-500 border-amber-500/20 group-focus-within/input:border-amber-500/50 shadow-amber-500/5',
    red: 'text-red-500 border-red-500/20 group-focus-within/input:border-red-500/50 shadow-red-500/5',
    cyan: 'text-cyan-400 border-cyan-400/20 group-focus-within/input:border-cyan-400/50 shadow-cyan-400/5',
  };

  const selectedColorClass = colorMap[color] || colorMap.blue;

  return (
    <div className="flex flex-col group/input">
      <label className="text-[8px] uppercase tracking-[0.2em] font-black text-gray-400 mb-1.5 ml-1 transition-colors group-hover/input:text-gray-700 whitespace-nowrap">{label}</label>
      <div className="relative">
        <input
          type="number"
          step="any"
          className={`w-full pl-3 pr-10 py-2.5 rounded-xl bg-[#0a0c10] font-mono font-black border outline-none transition-all focus:ring-4 focus:ring-gray-900/5 shadow-[inset_0_2px_4px_rgba(0,0,0,0.3)] text-sm ${selectedColorClass}`}
          value={value}
          required={required}
          placeholder={placeholder}
          onChange={(e) => onChange(e.target.value)}
        />
        <div className="absolute right-2.5 top-2.5 pointer-events-none opacity-20 group-focus-within/input:opacity-100 transition-opacity">
          <span className={`text-[7px] font-black tracking-widest ${selectedColorClass.split(' ')[0]}`}>LCD</span>
        </div>
      </div>
    </div>
  );
};

export default EnlacesAdminPage;
